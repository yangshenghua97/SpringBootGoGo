<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yang.springboot.example.example.mapper.UserMapper">
    <resultMap id="userMap" type="yang.springboot.example.example.entry.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="enabled" column="enabled"/>
        <result property="locked" column="locked"/>
    </resultMap>
    <resultMap id="roleMap" type="yang.springboot.example.example.entry.Role">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="nameZh" column="nameZh"/>
    </resultMap>
   <select id="loadUserByUserName" resultMap="userMap">
       select * from user where username=#{username}
   </select>
    <select id="getUserRoleByUid" resultMap="roleMap">
        select * from role r,user_role ur where r.id=ur.id and ur.uid=#{id}
    </select>
</mapper>